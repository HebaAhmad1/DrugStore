<!-- Change Pharmacy Password Modal  -->
<div class="modal" id="changePassword">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="">
                <button type="button" class="close mr-1" data-dismiss="modal">&times;</button>
                <h1 class="d-flex justify-content-center mt-4"><i class="fas fa-lock-alt d-block"></i></h1>
                <h6 class="d-flex justify-content-center mt-4">@localizer["Change Password"]</h6>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="">
                    <div class="form-group">
                        <input type="text" class="form-control" id="currentPassword"
                               placeholder="@localizer["Enter Current Password"]">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="newPassword"
                               placeholder="@localizer["Enter New Password"]">
                    </div>
                </div>

            </div>
            <!-- Modal footer id="UpdateCustomer" -->
            <div class="modal-footer justify-content-center UpdateCustomer">
                <button type="button" id="saveNewPassword" class="btn btn-primary w-25">@localizer["Save"]</button>
                <button type="button" class="btn btn-danger w-25" data-dismiss="modal">@localizer["Cancel"]</button>
            </div>
            <button type="button" class="d-none" id="showChangepassModal" data-toggle="modal" data-target="#changePassword">
            </button>
        </div>
    </div>
</div>