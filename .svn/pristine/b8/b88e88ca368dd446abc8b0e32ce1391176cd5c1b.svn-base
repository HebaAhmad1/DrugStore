* {
    box-sizing: border-box;
}

p {
    color: #707070;
}
/* Style the input container */
.input-container {
    display: flex;
    width: 100%;
    margin-bottom: 15px;
}

/* Style the form icons */
.icon {
    padding: 10px;
    background: dodgerblue;
    color: white;
    min-width: 50px;
    text-align: center;
}

/* Style the input fields */
.input-field {
    width: 100%;
    padding: 10px;
    outline: none;
}

    .input-field:focus {
        border: 2px solid dodgerblue;
    }

/* Set a style for the submit button */
.btn {
    background-color: dodgerblue;
    color: white;
    padding: 15px 20px;
    border: none;
    cursor: pointer;
    width: 100%;
    opacity: 0.9;
}

    .btn:hover {
        opacity: 1;
    }

.container-fluid .row .First_Div {
    padding-top: 11%;
    padding-left: 7%;
    padding-right: 2%;
}

.container-fluid .row .Second_Div img {
    width: 100%;
}

.container-fluid .row .Second_Div {
    padding-right: 0 !important;
    padding-left: 10% !important;
}




.container-fluid .row .First_Div .header {
    margin-bottom: 16%;
}

    .container-fluid .row .First_Div .header h3 {
        font-weight: bold;
        color: #484646;
    }

.container-fluid .row .First_Div .body button {
    border-radius: 50px;
    margin-top: 14px;
    color: #FFFFFF;
    background: #0093DD;
}

    .container-fluid .row .First_Div .body button i, .container-fluid .row .First_Div .header h3 i {
        margin-left: 1%;
        font-weight: 400;
    }

.container-fluid .row .First_Div .header h3 i {
    color: #A7CC3A;
}

.container-fluid .row .Second_Div .Child_Second_Div {
    background-image: url('../Images/bg.png');
    background-size: 100vh;
    background-position: right bottom, left top;
    background-repeat: no-repeat, repeat;
    padding: 15px;
    color: white;
    width: 100%;
    height: 100%;
    min-height: 100vh;
    position: relative;
}

    .container-fluid .row .Second_Div .Child_Second_Div .Sub_Child {
        position: absolute;
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;
        background: #0093ddb0;
        text-align: center;
    }

        .container-fluid .row .Second_Div .Child_Second_Div .Sub_Child img {
            width: 27%;
            margin-top: 25%;
        }

        .container-fluid .row .Second_Div .Child_Second_Div .Sub_Child h3 {
            margin-top: revert;
            color: #FFFFFF;
        }

        .container-fluid .row .Second_Div .Child_Second_Div .Sub_Child p {
            margin-right: auto;
            margin-top: revert;
            width: 50%;
            margin-left: auto;
            color: #F1F1F1;
        }


.Icon-inside {
    position: relative;
}

    .Icon-inside input {
        padding-left: 46px;
        background: #9898982e;
    }

    .Icon-inside img, .Icon-inside i {
        width: 25px;
        top: 6px;
        left: 16px;
        position: absolute;
    }

    .Icon-inside i {
        top: 11px;
    }



/*/ small devices (phones, 600px and down) /*/
@media (max-width: 576px) {
    /*Start Login Page */
    .container-fluid .row .Second_Div {
        padding-left: 0 !important;
    }

        .container-fluid .row .Second_Div .Child_Second_Div {
            padding: 0;
            background-position: initial;
            background-repeat: initial;
        }

            .container-fluid .row .Second_Div .Child_Second_Div .Sub_Child {
                position: relative !important;
            }

    /*End Login Page */
}
